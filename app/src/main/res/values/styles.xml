<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_light_green</item>
        <item name="colorPrimaryDark">@color/color_light_green</item>
        <item name="colorAccent">@color/color_light_green</item>
    </style>

    <style name="AppThemeMaterial" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_light_green</item>
        <item name="colorPrimaryDark">@color/color_light_green</item>
        <item name="colorAccent">@color/color_light_green</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="auth_title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_32</item>
        <item name="android:textColor">@color/color_green</item>
    </style>

    <style name="auth_white_title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="title_black">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="title_green">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_green</item>
    </style>

    <style name="title_grey">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_dark_grey</item>
    </style>

    <style name="auth_subtitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="title_black_16sp">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="title_categories">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_dark_grey</item>
    </style>

    <style name="subtitle_categories">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_grey</item>
    </style>

    <style name="text_btn_edit">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="subtitle_grey">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_dark_grey</item>
    </style>

    <style name="subtitle_green_12sp">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_dark_green</item>
    </style>

    <style name="subtitle_black">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="white_text_14sp">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="subtitle_bej_10sp">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">@color/color_dark_bej</item>
    </style>

    <style name="subtitle_grey_12sp">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_dark_grey</item>
    </style>

    <style name="login_edit_text">
        <item name="android:background">@drawable/bg_auth_edit_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:textColorHint">@color/color_light_green</item>
        <item name="android:layout_marginStart">@dimen/dp_24</item>
        <item name="android:layout_marginEnd">@dimen/dp_24</item>
    </style>

    <style name="reg_user_btn">
        <item name="android:background">@drawable/bg_auth_edit_text</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_light_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/dp_24</item>
        <item name="android:layout_marginEnd">@dimen/dp_24</item>
    </style>
</resources>