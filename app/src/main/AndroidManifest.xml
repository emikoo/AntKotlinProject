<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.antkotlinproject">
    <application
        android:name=".AntApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.auth.AuthorizationActivity"></activity>
        <activity android:name=".ui.user.detail_course.DetailCourseActivity"></activity>
        <activity android:name=".VideoPlayerActivity"></activity>
        <activity android:name=".ui.user.detail_course.DetailCourseActivity" />
        <activity android:name=".ui.user.main.MainUserActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>